<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    tools:context=".Adicionar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="2.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/local"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Local"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                tools:ignore="Autofill,HardcodedText" />

            <EditText
                android:id="@+id/localidade"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Localidade"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                tools:ignore="Autofill,HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="2.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text=" Dia:"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.Spinner
            style="@style/Material.Widget.Spinner"
            android:id="@+id/spinner_dia"
            android:layout_width="85dp"
            android:layout_height="60dp"
            app:spn_dividerHeight="0dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="MÃªs:"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.Spinner
            style="@style/Material.Widget.Spinner"
            android:id="@+id/spinner_mes"
            android:layout_width="85dp"
            android:layout_height="60dp"
            app:spn_dividerHeight="0dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Ano:"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.Spinner
            style="@style/Material.Widget.Spinner"
            android:id="@+id/spinner_ano"
            android:layout_width="130dp"
            android:layout_height="60dp"
            app:spn_dividerHeight="0dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"/>
    </LinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/gerar_relatorio"
        android:background="@drawable/round"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Identificar bioma"
        android:textAllCaps="false"
        app:rd_enable="true"
        tools:ignore="HardcodedText" />
</LinearLayout>